    script.
      // Script to open and close sidebar
      function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
      document.getElementById("myOverlay").style.display = "block";
      }
      function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
      document.getElementById("myOverlay").style.display = "none";
      }
      document.getElementById("pesinCB").onchange = function() {
        document.getElementById("pesinTF").disabled = !this.checked;
      };
      document.getElementById("kartCB").onchange = function() {
        document.getElementById("kartTF").disabled = !this.checked;
        document.getElementById("kartDD").disabled = !this.checked;
        document.getElementById("taksitDD").disabled = !this.checked;
      };
      document.getElementById("tebCB").onchange = function() {
        document.getElementById("tebTF").disabled = !this.checked;
      };
      function calculateSum() {
        var sum = 0;
        // iterate through each td based on class and add the values
        $(".price").each(function() {
          var value = $(this).text();
          // add only if the value is number
          if(value.length != 0) {
            value = value.replace('₺ ','');
            value = value.replace(',00','');
            sum += parseFloat(value);
          }
          console.log(sum);
        });
      }
      $(document).ready(function(){
        $('.price').each(function() {
          calculateSum();
        });
      });
      